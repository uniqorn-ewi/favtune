<div class="row">
  <div class="col-lg-12 text-center">
    <h2 class="section-heading text-uppercase">New Radio Station(USA)</h2>
    <h3 class="section-subheading text-muted">Please refer to information on the following site and input the item.</h3>

    <%= link_to 'Radio format - Wikipedia', "https://en.wikipedia.org/wiki/Radio_format",
      rel: 'noopener', target: '_blank' %>
    <br>
    <%= link_to 'Webcast - Wikipedia', "https://en.wikipedia.org/wiki/Webcast",
      rel: 'noopener', target: '_blank' %>
    <div id="station-wiki"></div>
    <div id="station-search"></div>
    <div id="ajax-msg"></div>
    <br>

<select class="parent" name="selectParent">
  <%= options_for_select([
    ["country", "", {selected: ""}],
    ["USA", "USA"],
    ["Canada", "Canada"],
  ]) %>
</select>

<select class="children" name="selectChildren" disabled>
  <%= options_for_select([
    ["state", "", {selected: ""}],
    ["California", "California", {data: {val: "USA"}}],
    ["New York", "New York", {data: {val: "USA"}}],
    ["Tennessee", "Tennessee", {data: {val: "USA"}}],
  ]) %>
</select>

<select class="grandchilds" name="selectGrandchilds" disabled>
  <%= options_for_select([
    ["callsign", "", {selected: ""}],
    ["KAMP-FM", "KAMP-FM", {data: {val: "California"}}],
    ["KOAD-LP", "KOAD-LP", {data: {val: "California"}}],
    ["KRHQ", "KRHQ", {data: {val: "California"}}],
    ["KZRO", "KZRO", {data: {val: "California"}}],
  ]) %>
</select>

    <p></p>
  </div>
</div>
