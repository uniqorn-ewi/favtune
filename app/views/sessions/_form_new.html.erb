<div class="card card-login mx-auto mt-5">
  <div class="card-header">Sign in</div>

  <div class="card-body">
    <% if flash.any? %>
    <div id="error_explanation">
      <ul>
        <% flash.each do |key, value| %>
        <%= content_tag(:li, value, class: "#{key}") %>
        <% end %>
      </ul>
    </div>
    <% end %>

    <!-- form -->
    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :email, 'Email address' %>
        <%= f.email_field :email, aria: {describedby: 'emailHelp'},
          placeholder: "Enter email", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password,
          placeholder: "Password", class: 'form-control' %>
      </div>
      <%= f.submit "Sign in", class: 'btn btn-primary btn-block' %>
    <% end %>
    <!--/form -->

    <div class="text-center">
      <%= link_to "Cancel", root_path, class: 'd-block small mt-3' %>
    </div>
  </div>
</div>
