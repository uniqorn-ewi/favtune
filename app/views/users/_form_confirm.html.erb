<div class="card card-register mx-auto mt-5">
  <div class="card-header">Register an Account</div>

  <div class="card-body">
    <!-- form -->
<%= form_with(model: user, url: users_path, local: true) do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :password %>
  <%= f.hidden_field :password_confirmation %>
<!--
  <#%= hidden_field_tag :"cache[avatar]", user.avatar.cache_name %>
 -->

  <div class="form-group">
    <%= f.label :name, 'Name' %>
    <p><%= user.name %></p>
  </div>

  <div class="form-group">
    <%= f.label :email, 'Email address' %>
    <p><%= user.email %></p>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Password' %>
    <p><%= user.password %></p>
  </div>

<!--
  <div class="team-member">
    <img class="img-fluid mx-auto rounded-circle" src="/<#%= user.avatar.cache_path %>" alt="avatar" />
  </div>
 -->

  <%= f.submit 'Submit', class: 'btn btn-primary btn-block' %>
<% end %>

    <!--/form -->
    <div class="text-center">
<%= form_with(model: user, url: new_user_path, local: true, method: 'get') do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :password %>
  <%= f.hidden_field :password_confirmation %>
<!--
  <#%= hidden_field_tag :"cache[avatar]", user.avatar.cache_name %>
 -->
  <%= f.submit "Back", name: 'back', class: 'btn btn-block d-block small mt-3' %>
<% end %>
    </div>
  </div>
</div>
